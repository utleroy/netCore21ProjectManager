@page
@model ProjectDashboard.Pages.Dashboard.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DateScheduledForProduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DateScheduledForDelivery)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateScheduledForProduction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateScheduledForDelivery)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
